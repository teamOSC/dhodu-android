<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
        <attr name="border_overlay" format="boolean" />
    </declare-styleable>

    <declare-styleable name="StepsViewIndicator">
        <attr name="numOfSteps" format="integer" />
    </declare-styleable>

    <declare-styleable name="ParallaxView">
        <attr name="speed" format="dimension" />
        <attr name="src" format="reference" />
    </declare-styleable>

    <declare-styleable name="WaterWave">
        <attr name="above_wave_color" format="color" />
        <attr name="blow_wave_color" format="color" />
        <attr name="progress" format="integer" />
        <attr name="wave_length" format="enum">
            <enum name="large" value="1" />
            <enum name="middle" value="2" />
            <enum name="little" value="3" />
        </attr>
        <attr name="wave_height" format="enum">
            <enum name="large" value="1" />
            <enum name="middle" value="2" />
            <enum name="little" value="3" />
        </attr>
        <attr name="wave_hz" format="enum">
            <enum name="fast" value="1" />
            <enum name="normal" value="2" />
            <enum name="slow" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="MachineView">
        <attr name="machineColor" format="color" />
        <attr name="holeRadius" format="dimension" />
        <attr name="top_view_height" format="dimension" />
        <attr name="bottom_view_height" format="dimension" />
        <attr name="middle_view_height" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MultiViewPager">
        <!-- Child view inside a page to match the page size against. -->
        <attr name="matchChildWidth" format="reference" />
        <!-- Maximum size. -->
        <attr name="android:maxWidth" />
        <!-- Maximum size. -->
        <attr name="android:maxHeight" />
    </declare-styleable>

    <declare-styleable name="CreditCardView">
        <attr name="cardNumber" format="string" />
        <attr name="cardNumberTextColor" format="color" />
        <attr name="cardNumberFormat" format="enum">
            <enum name="all_digits" value="0" />
            <enum name="masked_all_but_last_four" value="1" />
            <enum name="only_last_four" value="2" />
            <enum name="masked_all" value="3" />
        </attr>

        <attr name="cardName" format="string" />
        <attr name="cardNameTextColor" format="color" />

        <attr name="type" format="enum">
            <enum name="visa" value="0" />
            <enum name="mastercard" value="1" />
            <enum name="american_express" value="2" />
            <enum name="discover" value="3" />
            <enum name="auto" value="4" />
            <enum name="none" value="5" />
        </attr>

        <attr name="expiryDate" format="string" />
        <attr name="expiryDateTextColor" format="color" />

        <attr name="brandLogo" format="reference" />
        <!--<attr name="brandLogoPosition" format="enum" >
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>-->

        <attr name="putChip" format="boolean" />

        <attr name="isEditable" format="boolean" />
        <attr name="isCardNumberEditable" format="boolean" />
        <attr name="isCardNameEditable" format="boolean" />
        <attr name="isExpiryDateEditable" format="boolean" />
        <attr name="isCvvEditable" format="boolean" />

        <attr name="validTillTextColor" format="color" />
        <attr name="hintTextColor" format="color" />
        <attr name="isFlippable" format="boolean"/>

        <attr name="cvv" format="string"/>
        <attr name="cvvTextColor" format="color" />
        <attr name="cardBackBackground" format="reference" />
    </declare-styleable>

</resources>