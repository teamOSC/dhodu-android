<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:background="@drawable/app_background_light" />-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:id="@+id/camera_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top">

            <SurfaceView
                android:id="@+id/surface_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="0dp"
                android:alpha="0.6"
                android:background="@drawable/app_background_dark" />

            <LinearLayout
                android:id="@+id/form_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/pickup_date_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="pickup day : "
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                    <Spinner
                        android:id="@+id/order_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/day_selector"
                        android:prompt="@string/day_prompt"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:theme="@style/EditTextDarkBackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pickup_time_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="pickup time : "
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                    <EditText
                        android:id="@+id/order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="00:00"
                        android:textAlignment="center"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:theme="@style/EditTextDarkBackground" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pickup_location_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="location : "
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:id="@+id/location_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-light"
                        android:text="choose address"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_location" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/switch_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="normal"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                    <Switch
                        android:id="@+id/express_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:textOff="NORMAL"
                        android:textOn="EXPRESS" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:fontFamily="sans-serif-light"
                        android:text="express"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/service_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_press"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/white"
                        android:text="Press"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                    <CheckBox
                        android:id="@+id/cb_wash_press"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/white"
                        android:text="Wash &amp; Press"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                    <CheckBox
                        android:id="@+id/cb_dryclean"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@android:color/white"
                        android:text="Dryclean"
                        android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                        android:textColor="@android:color/white" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit_order"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:backgroundTint="@android:color/white"
                    android:fontFamily="sans-serif-light"
                    android:padding="15dp"
                    android:text="schedule pickup"
                    android:textAllCaps="false"
                    android:textColor="@color/dhodu_primary_dark"
                    android:textSize="20dp" />
            </LinearLayout>


        </FrameLayout>

        <LinearLayout
            android:id="@+id/topView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:elevation="5dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/dhodu_primary"
                android:minHeight="?attr/actionBarSize"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@color/dhodu_primary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/orderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="25dp"
                    android:fontFamily="sans-serif-medium"
                    android:text="Pull down to create a new order"
                    android:textAppearance="@android:style/TextAppearance.Large.Inverse"
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/expand"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="20dp" />

            </RelativeLayout>
        </LinearLayout>


    </FrameLayout>

</RelativeLayout>