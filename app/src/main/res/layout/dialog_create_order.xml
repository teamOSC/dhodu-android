<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:id="@+id/rootView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="Place new order"
                android:textSize="20sp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                android:paddingBottom="10dp"/>

           <View
               android:layout_width="match_parent"
               android:layout_height="1dp"
               android:background="#22000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:text="Select service type"
                android:textColor="@color/colorAccent"
                android:textSize="17sp" />

            <LinearLayout
                android:id="@+id/options_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/slot1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/radio_checked_left"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:paddingTop="5.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Wash and Press"
                        android:textColor="@android:color/black"
                        android:textSize="15.0dip" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/slot2"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="6dp"
                    android:background="@drawable/radio_checked_middle"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="20.0dip"
                    android:paddingRight="20.0dip"
                    android:paddingTop="5.0dip">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Dry Clean"
                        android:textColor="@android:color/black"
                        android:textSize="15.0dip" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>


        <ImageButton
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rootView"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:gravity="bottom|right"
            android:src="@drawable/ic_arrow_forward_white_24px" />

    </RelativeLayout>

</FrameLayout>