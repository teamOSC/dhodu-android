<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:orientation="horizontal"
        android:background="@drawable/app_background_dark"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:paddingTop="30dp"
            android:layout_gravity="left|top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/dhodu_icon_512"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/profile_pic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLargeInverse"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginLeft="15dp"
                android:text="Dhodu Dhodu"
                android:id="@+id/profile_name" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMediumInverse"
                android:fontFamily="sans-serif-thin"
                android:layout_marginLeft="15dp"
                android:text="+919891743645"
                android:id="@+id/profile_mobile" />
        </LinearLayout>


    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:text="Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/dhodu_primary_dark"
            android:text="I-2/8, Sector 16\nRohini\nNew Delhi 110058"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <TextView
            android:text="Dhodu Wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textColor="@color/dhodu_primary_dark"
            android:text="\u20b9 456"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>