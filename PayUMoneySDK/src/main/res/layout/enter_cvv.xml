<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cvvBox"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="36dp"
    android:background="@drawable/dialog_bg"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_gravity="left"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"

            android:layout_margin="1dp"
            android:textSize="20sp"
            android:text="Enter CVV "/>

        <EditText
            android:id="@+id/cvv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="1dp"
            android:layout_marginLeft="40dp"
            android:ems="10"
            android:inputType="numberPassword"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:paddingBottom="5dp">

        <Button
            android:id="@+id/view_details"
            android:layout_width="@dimen/dialog_layout_button_width"
            android:layout_height="@dimen/dialog_layout_button_height"
            android:padding="@dimen/dialog_layout_button_boundary_padding"
            style="@style/button"
            android:background="@drawable/button_bkg"
            android:text="View Details"
            android:textSize="@dimen/dialog_layout_text_size" />

        <Button
            android:id="@+id/makePayment"
            android:layout_width="@dimen/dialog_layout_button_width"
            android:layout_height="@dimen/dialog_layout_button_height"
            android:padding="@dimen/dialog_layout_button_boundary_padding"
            android:layout_marginLeft="@dimen/dialog_layout_button_space"
            android:enabled="false"
            style="@style/button"
            android:background="@drawable/button_bkg"
            android:text="@string/pay"
            android:textSize="@dimen/dialog_layout_text_size" />
    </LinearLayout>


</LinearLayout>
