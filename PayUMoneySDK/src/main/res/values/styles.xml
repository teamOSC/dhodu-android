<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">



    <style name="MyTheme" parent="@android:style/Theme.Holo.Light" tools:ignore="NewApi">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionTheme" parent="@style/Theme.AppCompat" tools:ignore="NewApi">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar" tools:ignore="NewApi">
        <item name="android:background">#6ac451</item>
    </style>


    <style name="editTextViewStyle" parent="android:style/Widget.EditText">

    </style>

    <style name="autoCompleteTextViewStyle" parent="android:style/Widget.AutoCompleteTextView">

    </style>

    <style name="button" parent="android:style/Widget.Button">
       <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:padding">@dimen/sixteen</item>
    </style>

    <style name="ProgressBar.Horizontal" parent="@android:style/Widget.ProgressBar.Horizontal">



    </style>

    <style name="ProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- <style name="grayButton" parent="style/button">
        <item name="android:background">@color/gray</item>
    </style> -->

    <style name="PauseDialog" parent="android:Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
        <item name="android:typeface">serif</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

</resources>
